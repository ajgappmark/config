
!Stil a work in progress but I got most of the keybindings that Im use to
!

URxvt.depth: 32
URxvt.background: [95]#000000

! URxvt Settings
URxvt.perl-ext-common:                  default,clipboard,matcher,tabbedex,font-size
URxvt*font:                             xft:DejaVu Sans Mono for Powerline:pixelsize=15:antialias=true:hinting=true

URxvt*url-launcher:                     firefox
URxvt.matcher.button:                   1
URxvt*scrollBar:                        false

!Not 100% sure what it does but it was recommended by arch wiki
URxvt.secondaryScreen:                  1
URxvt.secondaryScroll:                  0

!disable default behavior so that you can map to control and control shift
URxvt.iso14755:                         false
URxvt.iso14755_52:                      false

!clipbard settings
URxvt.keysym.C-S-C:                     perl:clipboard:copy
URxvt.keysym.C-S-V:                     perl:clipboard:paste

!font settings
URxvt.keysym.C-S-plus:                  perl:font-size:increase
URxvt.keysym.C-S-underscore:            perl:font-size:decrease

